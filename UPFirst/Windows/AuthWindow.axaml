<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UPFirst.Views.AuthWindow"
        Title="Authorization"
        Width="320"
        Height="220"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <StackPanel Margin="20" Spacing="15">
        <TextBox Name="NameBox" Watermark="Name"/>
        <TextBox Name="PasswordBox" Watermark="Password" PasswordChar="●"/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
            <Button Content="Войти" Click="LoginButton_Click" Width="100" Height="30"/>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Width="140" Height="30"/>
        </StackPanel>
    </StackPanel>
</Window>
