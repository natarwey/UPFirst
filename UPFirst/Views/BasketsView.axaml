<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="UPFirst.Views.BasketsView">

	<StackPanel>
		<DataGrid x:Name="BasketsDataGrid"
				  AutoGenerateColumns="False"
				  IsReadOnly="True"
				  GridLinesVisibility="All"
				  SelectionMode="Single">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Item" Binding="{Binding Item.Title}" Width="2*"/>
				<DataGridTextColumn Header="Price" Binding="{Binding Item.Price}" Width="1*"/>
				<DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="0.8*"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
			<Button Content="×" Click="DeleteButton_Click" Width="40" Height="30" Foreground="Red"/>
			<Button Content="Buy" Click="BuyButton_Click" Width="80" Height="30"/>
		</StackPanel>
	</StackPanel>
</UserControl>
