<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:data="using:UPFirst.Data"
             x:Class="UPFirst.Views.UsersView">
  
    <StackPanel>
		<DataGrid x:Name="UsersDataGrid"
                  AutoGenerateColumns="False"
				  x:DataType="data:User"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  SelectionMode="Single"
                  DoubleTapped="UsersDataGrid_DoubleTapped">
            <DataGrid.Columns>
				<DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="100" x:DataType="data:User"/>
				<DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150" x:DataType="data:User"/>
				<DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="550" x:DataType="data:User"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
			<Button Content="+" Click="AddButton_Click" Width="40" Height="30"/>
			<Button Content="×" Click="DeleteButton_Click" Width="40" Height="30" Foreground="Red"/>
		</StackPanel>
	</StackPanel>
</UserControl>
