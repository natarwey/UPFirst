<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:data="using:UPFirst.Data"
			 x:Class="UPFirst.Views.ItemsView">

	<StackPanel>
		<DataGrid x:Name="ItemsDataGrid"
				  AutoGenerateColumns="False"
				  x:DataType="data:Item"
				  IsReadOnly="True"
				  GridLinesVisibility="All"
				  SelectionMode="Single"
				  DoubleTapped="ItemsDataGrid_DoubleTapped">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="40" x:DataType="data:Item"/>
				<DataGridTextColumn Header="Item" Binding="{Binding Title}" Width="100" x:DataType="data:Item"/>
				<DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100" x:DataType="data:Item"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
			<Button Content="+" Click="AddButton_Click" Width="40" Height="30"/>
			<Button Content="Ã—" Click="DeleteButton_Click" Width="40" Height="30" Foreground="Red"/>
			<Button Content="In basket" Click="InBasketButton_Click" Width="80" Height="30"/>
		</StackPanel>
	</StackPanel>
</UserControl>
